{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2Read",
            "Action": [
                "ec2:DescribeInstances"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "EC2Write",
            "Action": [
                "ec2:StopInstances",
                "ec2:StartInstances"
            ],
            "Effect": "Allow",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTag/${tag_key}": "${tag_value}"
                }
            }
        },
        {
            "Sid": "AutoscalingRead",
            "Action": [
                "autoscaling:DescribeAutoScalingGroups"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "AutoscalingWrite",
            "Action": [
                "autoscaling:UpdateAutoScalingGroup"
            ],
            "Effect": "Allow",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "autoscaling:ResourceTag/${tag_key}": "${tag_value}"
                }
            }
        }
    ]
}